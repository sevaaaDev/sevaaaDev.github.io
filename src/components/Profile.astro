---
import ProfileImage from "../assets/chicken.png";
---

<div class="profile">
  <div class="profile-img">
    <img src={ProfileImage.src} alt="blank-image" />
  </div>
  <div class="profile-content">
    <h1>sevaaaDev</h1>
    <p>
      <span>I make computer program,</span>
      <span>and i also write blog</span>
    </p>
  </div>
</div>
<style>
  .profile h1,
  p {
    margin: 0;
    text-align: center;
  }
  .profile {
    display: flex;
    gap: 0 1rem;
    flex-wrap: wrap;
  }
  .profile-content {
    /* TODO: learn flex   */
    flex: 1 0 0;
    min-width: 200px;
  }
  .profile-content h2 {
    margin: 0;
  }
  .profile-img {
    width: 100%;
  }
  .profile-img img {
    border: 4px solid grey;
    border-radius: 50%;
    width: 100px;
    height: 100px;
    display: block;
    margin-inline: auto;
  }
  .profile-content span {
    white-space: nowrap;
  }
</style>
