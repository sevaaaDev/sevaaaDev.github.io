---
import Layout from "../layouts/Layout.astro";
import Profile from "../components/Profile.astro";
import SmallBlogList from "../components/SmallBlogList.astro";
import About from "../components/About.astro";
import ProjectList from "../components/ProjectList.astro";
---

<Layout>
  <header>
    <Profile />
  </header>
  <div>
    <main>
      <About />
      <ProjectList />
      <SmallBlogList />
    </main>
    <footer>Made with Astro</footer>
  </div>
</Layout>
<style>
  header {
    flex: 1 1 0;
  }
  div {
    flex: 1 1 400px;
  }
</style>
